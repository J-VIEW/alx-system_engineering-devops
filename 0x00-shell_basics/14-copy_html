#!/bin/bash

# Get the current working directory and its parent
current_dir=$(pwd)
parent_dir=$(dirname "$current_dir")

# Loop through HTML files in the current directory
for html_file in *.html; do
    # Check if the file exists in the parent directory and is newer
    if [ -e "$parent_dir/$html_file" ]; then
        current_mtime=$(stat -c %Y "$html_file")
        parent_mtime=$(stat -c %Y "$parent_dir/$html_file")
        
        if [ "$current_mtime" -gt "$parent_mtime" ]; then
            cp "$html_file" "$parent_dir"
            echo "Copied $html_file to $parent_dir"
        else
            echo "$html_file already exists in $parent_dir and is not newer."
        fi
    else
        cp "$html_file" "$parent_dir"
        echo "Copied $html_file to $parent_dir"
    fi
done

